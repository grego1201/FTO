<h1> Referees </h1>

<ul>
  <% @referees.each do |referee| %>
    <li>
      <%= link_to "#{referee.first_name} #{referee.last_name}", referee %>
      <%= link_to "Edit", edit_referee_path(referee) %>
      <%= link_to "Destroy", referee_path(referee),
        method: :delete,
        data: { confirm: 'Are you sure?' } %>
    </li>
  <% end %>
</ul>
